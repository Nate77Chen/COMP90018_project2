<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/custom_dialog_shape">

    <TextView
        android:id="@+id/cd_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/tips"
        android:drawablePadding="5dp"
        android:text="Tips!"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/cd_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Are you sure to quit?"
        android:gravity="center_vertical"
        android:textStyle="normal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:paddingRight="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#979797"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cd_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No, not sure."
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/mainColor_04"
            android:gravity="center"
            android:background="@drawable/custom_dialog_cancel_selector"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#979797"/>
        <TextView
            android:id="@+id/cd_tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Yes, sure."
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/custom_dialog_confirm_selector"/>

    </LinearLayout>
</LinearLayout>