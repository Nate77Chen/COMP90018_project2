<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/mainColor_01">

    <TextView
        android:id="@+id/fl_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/bear"
        android:drawablePadding="10dp"
        android:text="Friends"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/list_shape"
        android:layout_below="@+id/fl_tv">
        <ListView
            android:id="@+id/f_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/flist_item"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/fl_btn_friends"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/friends_2"
            android:background="@color/transparent"
            />
        <ImageButton
            android:id="@+id/fl_btn_map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/map_0"
            android:background="@color/transparent"
            android:layout_marginLeft="50dp"/>
        <ImageButton
            android:id="@+id/fl_btn_personal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person_0"
            android:background="@color/transparent"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

</RelativeLayout>