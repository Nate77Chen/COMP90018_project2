<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle">

        <ImageButton
            android:id="@+id/Arrow_left_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="#3D348B"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/l_tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/Arrow_left_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/l_tv_1"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/Email_address_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="#3D348B"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Password_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Email_address_text"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="#3D348B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Password_text"
            android:layout_alignRight="@id/Password_text"
            android:gravity="right"
            android:text="Forgot Password?"
            android:textColor="@drawable/click_forgot"
            android:textStyle="bold" />
    </RelativeLayout>


    <Button
        android:id="@+id/Log_in_submit_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/click_03"
        android:text="@string/log_in"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal">
        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#979797" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="or"
            android:textAllCaps="false"
            android:textColor="#979797"
            android:textSize="16dp" />
        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#979797" />
    </LinearLayout>

    <Button
        android:id="@+id/Turn_To_Sign_Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/click_04"
        android:text="@string/sign_up"
        android:textColor="#3D348B"
        android:textSize="16dp"/>

</LinearLayout>