<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/mainColor_01">

    <TextView
        android:id="@+id/rank_tv_01"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/fire"
        android:drawablePadding="6dp"
        android:text="Steps Rank"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/list_shape"
        android:layout_below="@+id/rank_tv_01">
        <ListView
            android:id="@+id/rank_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/flist_item"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/mainColor_02"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:paddingLeft="10dp">
            <ImageButton
                android:id="@+id/rank_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/rank_update"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp">
            <Button
                android:id="@+id/rank_btn_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@drawable/rank_update"
                />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>