<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/df_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/m_shape"
            android:src="@drawable/default_cover_img"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/df_username"
            android:layout_width="120dp"
            android:layout_height="50sp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:text="username"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/shadow"
                android:layout_weight="1">

                <Button
                    android:id="@+id/df_delete"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/click_05"
                    android:focusable="false"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="@drawable/color_yes"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>