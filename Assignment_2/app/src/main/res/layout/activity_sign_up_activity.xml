<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle">

        <ImageButton
            android:id="@+id/Arrow_left_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="#3D348B"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Create              Account"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/Arrow_left_btn"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/people"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/username"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="#3D348B"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Email_address_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/username_text"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="#3D348B"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Password_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/Email_address_text"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="#3D348B"
            android:textSize="16sp" />

    </RelativeLayout>


<Button
    android:id="@+id/Sign_up_submit_button"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/click_03"
    android:text="@string/sign_up"
    android:textColor="#FFFFFF"
    android:textAllCaps="false"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center_horizontal">
    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#979797" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:text="OR"
        android:textColor="#979797"
        android:textSize="16dp"
        android:textAllCaps="false" />
    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#979797" />
</LinearLayout>

<Button
    android:id="@+id/Turn_To_Login_Button"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/click_04"
    android:text="@string/log_in"
    android:textColor="#3D348B"
    android:textAllCaps="false" />

</LinearLayout>